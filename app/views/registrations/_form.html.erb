<%= form_with(model: user, url: registration_path, class: "w-full space-y-4",
  data: {
    turbo:"false",
    controller: "registration",
    action: "submit->registration#callback",
    registration_callback_url_value: callback_registration_path
    }) do |form|
%>
  <!-- Name Field -->
  <div class="form-control w-full">
    <label class="label" for="user_name">
      <span class="label-text font-medium">Name</span>
      <span class="label-text-alt text-error">*</span>
    </label>
    <%= form.text_field :name,
        required: true,
        placeholder: "Display name",
        class: "input input-bordered w-full focus:input-primary",
        id: "user_name" %>
    <% if user.errors[:name].any? %>
      <label class="label">
        <span class="label-text-alt text-error"><%= user.errors[:name].first %></span>
      </label>
    <% end %>
  </div>

  <!-- Username Field -->
  <div class="form-control w-full">
    <label class="label" for="user_username">
      <span class="label-text font-medium">Username</span>
      <span class="label-text-alt text-error">*</span>
    </label>
    <%= form.text_field :username,
        required: true,
        placeholder: "Choose a username",
        class: "input input-bordered w-full focus:input-primary",
        id: "user_username" %>
    <label class="label">
      <span class="label-text-alt">Username must be unique</span>
    </label>
    <% if user.errors[:username].any? %>
      <label class="label">
        <span class="label-text-alt text-error"><%= user.errors[:username].first %></span>
      </label>
    <% end %>
  </div>

  <!-- Submit Button -->
  <div class="form-control w-full mt-6">
    <%= form.submit "Create Account",
        class: "btn btn-primary w-full" %>
  </div>
<% end %>
